{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Reclamation index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>IdRec</th>
            <th>TypeRec</th>
            <th>DescriptionRec</th>
            <th>DateRec</th>
            <th>Cin</th>
            <th>Archived</th>
            <th>Screenshot</th>
            <th>Email</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.idRec }}</td>
                <td>{{ reclamation.typeRec }}</td>
                <td>{{ reclamation.descriptionRec }}</td>
                <td>{{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.cin }}</td>
                <td>{{ reclamation.archived ? 'Yes' : 'No' }}</td>
                <td>{{ reclamation.screenshot }}</td>
                <td>{{ reclamation.email }}</td>
                <td>
                    <a href="{{ path('showBack', {'idRec': reclamation.idRec}) }}">show</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}