{% extends 'base.front.html.twig' %}

{% block title %}Votre panier{% endblock %}
 {% block navbar %}
     <li>
         <a href="{{ path('app_equipement_index') }}">Equipements</a>
     </li>
 {%endblock navbar %}
{% block body %}
    <section class="bg-light p-3">
        <h1>Votre panier</h1>
    </section>

    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for equipement in dataPanier %}
            <tr>
                <td>{{ equipement.nomEquipement }}</td>
                <td class="text-end">{{ equipement.prixEquipement }} DT</td>
                <td>1</td>
                <td class="text-end">{{equipement.prixEquipement }} DT</td>
                <td>
                    <a href="{{path("vp_add", {refEquipement: equipement.refEquipement})}}" class="btn btn-info"> +
                        <i class="bi bi-cart-plus"></i>
                    </a>

                    <a href="{{path("vp_remove", {refEquipement: equipement.refEquipement})}}" class="btn btn-warning">
                        - <i class="bi bi-cart-dash"></i>
                    </a>
                    <a href="{{path("vp_delete", {refEquipement: equipement.refEquipement})}}" class="btn btn-danger">
                        x <i class="bi bi-cart-x"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Your cart is empty !</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3"><strong>Total Panier  </strong></td>

            <td class="text-end">{{ total }} DT</td>

            <td>
                <a href="{{path("vp_delete_all")}}" class="btn btn-danger">Delete All
                    <i class="bi bi-cart-x"></i>
                </a>



            </td>
        </tr>

        </tfoot>
    </table>
    <div class="container">
        <a  href="{{ path("app_checkout",{"prixtotal": total }) }} " class="btn btn-warning" >
            Online Payment
        </a>
        <a href="{{ path('app_commandefront_new') }}" class="btn btn-info">Payment with Delivery</a>
    </div>

{% endblock %}