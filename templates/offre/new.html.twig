{% extends 'base.html.twig' %}

{% block title %}New offre{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <h1><div class="panel-heading"> Ajouter un offre</div></h1>
            <div class="panel-body">
                <div class="col-md-6">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label>refEquipement</label>
                        {{ form_widget(form.refEquipement, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.refEquipement) }}
                        </div>
                        </div>

                        
                        <label>dateDebutpromo</label>
                        {{ form_widget(form.dateDebutpromo, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.dateDebutpromo) }}
                    
                    
                    <div class="form-group">
                         <label>date fin promo</label>
                        {{ form_widget(form.dateFinpromo, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.dateFinpromo) }}
                    </div>
                  
                    <div class="form-group">
                        <label>Pourcentage promotion </label>
                        {{ form_widget(form.pourcentagepromo, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.pourcentagepromo) }}
                    </div>
                
                    <input type="submit" value="Enregistrer" class="btn btn-success" formnovalidate />
                    <a href="{{ path('app_offre_index') }}">Afficher les offres </a>
                    {{ form_end(form) }}
                </div>
                <div class="col-md-6">
                </div>
            </div>
        </div><!-- /.col-->
    </div>
{% endblock %}

