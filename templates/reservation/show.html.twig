{% extends 'base.front.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<section>
    <div class="container">
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdReservation</th>
                <td>{{ reservation.idReservation }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ reservation.cin }}</td>
            </tr>
            <tr>
                <th>DateReservation</th>
                <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nbrpersonne</th>
                <td>{{ reservation.nbrpersonne }}</td>
            </tr>
        </tbody>
    </table>


    <img src="https://api.qrserver.com/v1/create-qr-code/?data=Id_Reservation: {{reservation.idReservation}},
                                                               Cin: {{ reservation.cin}},
                                                               Nbr des personnes: {{ reservation.nbrpersonne}},
                                                               Date: {{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d') : '' }} &amp;size=250x250" alt="" title=":Les details de votre reservation" style="atsc-nav-index:1000px"/>

    <br>


    </br>
    {{ include('reservation/_delete_form.html.twig') }}
    <a class="btn btn-primary" href="{{ path('app_reservation_index') }}">back to list</a>


</div>
</section>
{% endblock %}
