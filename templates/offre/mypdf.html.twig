<th> date Fin promotion</th>
<th> pourcentage promotion</th>
</tr>
    </thead>
    </thead>
    <tbody>
        
  <tbody style="text-align:center;">
    {% set i=0 %}
    {% for offre in offres %}
        {% set i = i + 1 %}
        <tr>
          <td>{{ i }}</td>
            <td>{{ offre.idPromotion }}</td>
            <td>{{offre.dateDebutpromo ? offre.dateDebutpromo|date('Y-m-d')}}</td>
            <td>{{offre.dateFinpromo ? offre.dateFinpromo|date('Y-m-d')}}</td>
            <td>{{offre.pourcentagepromo}}</td>
        </tr>
        {% endfor %}
</tbody>
</table>

{% endblock %}

